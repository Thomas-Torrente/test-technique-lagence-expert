{% extends 'base.html.twig' %}

{% block title %}
	Space Blog |
	{{article.title}}
{% endblock %}

{% block body %}

	<section class="container">
		{% if app.user %}
			{% if app.user.roles[0] == "ROLE_ADMIN" %}
				<div class="text-center">
					<p>Administration de l'article :
					</p>

					<a class="btn btn-info" href="{{ path('app_articles_edit', {'slug': article.slug}) }}">Editer l'article</a>
					{{ include('articles/_delete_form.html.twig') }}
				</div>
			{% endif %}
		{% endif %}
		<div class="row">
			<div
				class="col-12">

				{# Lien pour retourner à l'accueil #}
				<a class="text-decoration-none btn btn-space" href="{{ path('app_accueil') }}">
					Retour
				</a>

				<div
					class="text-center bg-white rounded mt-5 p-5">


					{# Img #}

					<div class="text-center">
						<img src="{{ asset('asset/img/articles/' ~ article.cover) }}" class="img-fluid " alt="{{article.title}}">
					</div>

					{# Titre #}
					<h1 class="text-center my-5 ">{{article.title}}</h1>

					<p>{{article.content | raw}}</p>

					<p class="text-start p-3">Publiée le
						{{ article.dateCreated | date('d-m-Y') }}</p>

				</div>
			</div>
		</div>
	</section>


{% endblock %}
